<div class="blog-area  pt--120 pb--70">
	<div class="container">
		<div class="row">
			@foreach (var item in Model)
			{
				<div class="col-lg-4 col-md-6">
					<div class="card mb-5">
						<img class="card-img-top" src="@item.PhotoURL" alt="image">
						<div class="card-body p-25">
							<ul class="list-inline blog-meta mb-3">
								<li><i class="fa fa-comments"></i> 3 Comments</li>
							</ul>
							<h4 class="card-title mb-4"><a href="blog-details.html">@item.Title</a></h4>
							<p class="card-text">@item.Summary</p>
							<a class="btn btn-primary btn-round btn-sm" href="/Blog/Details/@item.BlogPost_Id"> YAZIYA GİT </a>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>