@using entity.Concrate
@model List<Adress>
@{
	ViewData["Title"] = "Adres";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="event-area  pt--120 pb--80">
	<div class="container">
		<div class="row">
			<div class="col-md-8">
				<div class="section-title">
					<span class="text-uppercase">ADRES İŞLEMLERİ</span>
					<h2>Sisteme Kayıtlı Adresler </h2>
				</div>
			</div>
		</div>
		<div class="row">

			<div class="col-md-6">
				<div class="media align-items-center mb-5">
					<div class="media-body primary-bg">
						<div class="mt-5 mb-5 text-center d-flex justify-content-center">
							<p>
								<a> </a><br />
								<a> </a><br />
								<a> </a><br />
								<a class="btn btn-success btn-round btn-sm" href="/Admin/Adress/AdressAdd">ADRES EKLE</a>
								<a> </a><br />
								<a> </a><br />
								<a> </a><br />
							</p>
						</div>
					</div>
				</div>
			</div>
			@foreach (var item in Model)
			{
				<div class="col-md-6">
					<div class="media align-items-center mb-5">
						<div class="media-head primary-bg">
							<p><span>ID: </span>@item.Adress_Id</p>
						</div>
						<div class="media-body">
							<h4><span class="text-warning">İl: </span>@item.City.Name</h4>
							<h4><span class="text-warning">İlçe: </span>@item.Town</h4>
							<h4><span class="text-warning">Mahalle: </span>@item.Neighbourhood</h4>
							<h4><span class="text-warning">Sokak: </span>@item.Street</h4>
							<h4><span class="text-warning">Bina Numarası: </span>@item.NO</h4>
							<h4><span class="text-warning">Kapı Numarası: </span>@item.Apartment</h4>
							<a href="/Admin/Adress/AdressGet/@item.Adress_Id"><i class="fa fa-pencil">  DÜZENLE</i></a>

							<br />
							<a href="/Admin/Adress/AdressDelete/@item.Adress_Id"><i class="fa fa-trash text-danger">  SİL</i></a>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>