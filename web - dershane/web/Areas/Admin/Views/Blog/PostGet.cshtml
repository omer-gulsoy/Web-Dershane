@using entity.Concrate
@model Blog
@{
	ViewData["Title"] = "Gönderi Düzenle";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("PostUpdate", "Blog", FormMethod.Post))
{
	<div class="contact-form-area pb--120">
		<div class="container">
			<div class="row">
				<div class="col-md-10 offset-md-1">
					<div class="cnt-title">
						<h4>Gönderi <span>düzenleyin</span></h4>
						<p>Gönderi düzenleyin blog'a katkıda bulunun ve eğitimin gelişmesine yardımcı olun</p>
					</div>
				</div>
			</div>
			<div class="contact-form">
				<form method="post">
					<div class="row">
						@Html.TextBoxFor(model => model.BlogPost_Id, new { style = "display:none;" })
						<div class="col-md-4">
							<h2 class="mb-2">Başlık</h2>
							@Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
						</div>
						<div class="col-md-4">
							<h2 class="mb-2">Özet</h2>
							@Html.TextBoxFor(model => model.Summary, new { @class = "form-control" })
						</div>
						<div class="col-md-4">
							<h2 class="mb-2">Yazı</h2>
							@Html.TextBoxFor(model => model.Article, new { @class = "form-control" })
						</div>
						<div class="col-md-4">
							<h2 class="mb-2">Fotoğraf URL</h2>
							@Html.TextBoxFor(model => model.PhotoURL, new { @class = "form-control" })
						</div>
						<div class="col-md-4">
							<h2 class="mb-2">Gönderi Statüsü</h2>
							@Html.DropDownList("Status", new SelectList(new List<Object>
						{
						new { Value = "true", Text = "Aktif" },
						new { Value = "false", Text = "Pasif" }
						}, "Value", "Text"), "Gönderi statüsünü seçiniz...", new { @class = "form-control" })
						</div>
						<div class="col-md-12 mt-5 text-center">
							<button type="submit" class="btn-primary">DEĞİŞKLİKLERİ KAYDET</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
}


