@using entity.Concrate
@model List<Parent>
@{
	ViewData["Title"] = "Veli";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="event-area  pt--120 pb--80">
	<div class="container">
		<div class="row">
			<div class="col-md-8">
				<div class="section-title">
					<span class="text-uppercase">VELİ İŞLEMLERİ</span>
					<h2>Sisteme Kayıtlı Veliler </h2>
				</div>
			</div>
		</div>
		<div class="row">
			@foreach (var item in Model)
			{
				<div class="col-md-6">
					<div class="media align-items-center mb-5">
						<div class="media-body primary-bg ">
							<div class="mt-5 mb-5">
								<p>
									<h4 class="mt-3 mb-3">@item.FirstName <b>@item.LastName</b></h4>
									<a href="tel:@item.Phone"><i class="fa fa-phone"> @item.Phone</i></a><br />
									<a href="mailto:@item.Email"><i class="fa fa-envelope "> @item.Email</i></a><br />
									@foreach (var i in @ViewBag.Students)
									{
										@if (i.Parent_Id == item.Parent_Id)
										{
											<a href="/Admin/Student/StudentGet/@i.Student_Id"><i class="fa fa-graduation-cap "> @i.FirstName @i.LastName</i></a>

											<br />
										}
									}
								</p>
							</div>
						</div>
						<div class="media-body">
							<a href="/Admin/Parent/ParentGet/@item.Parent_Id"><i class="fa fa-info text-info"> KİŞİSEL BİLGİLER</i></a><br />
							<a href="/Admin/Parent/ParentGet/@item.Parent_Id"><i class="fa fa-pencil"> DÜZENLE</i></a><br />
							<a href="/Admin/Parent/ParentDelete/@item.Parent_Id"><i class="fa fa-trash text-danger"> SİL</i></a>
						</div>
					</div>
				</div>
			}
			<div class="col-md-6">
				<div class="media align-items-center m-5">
					<div class="media-body">
						<h4 class="m-3"><a class="text-success" href="/Admin/Parent/ParentAdd"><i class="fa fa-plus text-success">   Veli Oluştur</i></a></h4>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
