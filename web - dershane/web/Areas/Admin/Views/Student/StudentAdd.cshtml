@using entity.Concrate
@model Student
@{
    ViewData["Title"] = "Öğrenci Ekleme";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="contact-form-area pb--120">
	<div class="container">
		<div class="row">
			<div class="col-md-10 offset-md-1">
				<div class="cnt-title">
					<h4>Öğrenci <span>oluşturun</span></h4>
					<p>Öğrenci oluşturun ve eğitimin gelişmesine yardımcı olun</p>
				</div>
			</div>
		</div>
		<div class="contact-form mt-5">
			<form method="post">
				<div class="row">
					<div class="col-md-6">
						<h5 class="mb-2">İsim</h5>
						@Html.TextBoxFor(x => x.FirstName, new { placeholder = "Lütfen metin giriniz...", @class = "form-control" })
					</div>
					<div class="col-md-6">
						<h5 class="mb-2"> Soyisim</h5>
						@Html.TextBoxFor(x => x.LastName, new { placeholder = "Lütfen metin giriniz...", @class = "form-control" })
					</div>
					<div class="col-md-6">
						<h5 class="mb-2"> T.C. Kimlik Numarası</h5>
						@Html.TextBoxFor(x => x.TC, new { placeholder = "Lütfen metin giriniz...", @class = "form-control" })
					</div>
					<div class="col-md-6">
						<h5 class="mb-2"> Doğum Tarihi</h5>
						@Html.TextBoxFor(model => model.BirthDay, new { placeholder = "Lütfen metin giriniz...", @class = "form-control", @id = "birthDayPicker" })
					</div>
					<div class="col-md-6">
						<h5 class="mb-2"> Telefon Numarası</h5>
						@Html.TextBoxFor(x => x.Phone, new { placeholder = "Lütfen metin giriniz...", @class = "form-control" })
					</div>
					<div class="col-md-6">
						<h5 class="mb-2"> E-Posta Adresi</h5>
						@Html.TextBoxFor(x => x.Email, new { placeholder = "Lütfen metin giriniz...", @class = "form-control" })
					</div>
					<div class="col-md-6">
						<h5 class="mb-2"> Doğum Yeri</h5>
						@Html.TextBoxFor(x => x.Hometown, new { placeholder = "Lütfen metin giriniz...", @class = "form-control" })
					</div>
					<div class="col-md-6">
						<h5 class="mb-2"> Adres ID</h5>
						@Html.TextBoxFor(x => x.Adress_Id, new { placeholder = "Lütfen metin giriniz...", @class = "form-control" })
					</div>
					<div class="col-md-6">
						<h5 class="mb-2"> Sınıf ID</h5>
						@Html.TextBoxFor(x => x.Class_Id, new { placeholder = "Lütfen metin giriniz...", @class = "form-control" })
					</div>
					<div class="col-md-6">
						<h5 class="mb-2"> Statü</h5>
						@Html.DropDownList("Status", new SelectList(new List<Object>
						{
						new { Value = "true", Text = "Aktif" },
						new { Value = "false", Text = "Pasif" }
						}, "Value", "Text"), "Lütfen statü seçiniz...", new { @class = "form-control" })
					</div>
					<div class="col-md-12 text-center">
						<button type="submit">ÖĞRENCİ OLUŞTUR</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
