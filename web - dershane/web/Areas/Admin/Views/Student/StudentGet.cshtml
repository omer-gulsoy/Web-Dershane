@using entity.Concrate
@model Student
@{
    ViewData["Title"] = "Öğrenci Düzenleme";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("ParentUpdate", "Parent", FormMethod.Post))
{
	<div class="contact-form-area pb--120">
		<div class="container">
			<div class="row">
				<div class="col-md-10 offset-md-1">
					<div class="cnt-title">
						<h4>Öğrenci <span>düzenleyin</span></h4>
						<p>Öürencileri düzenleyin ve eğitimin gelişmesine yardımcı olun</p>
					</div>
				</div>
			</div>
			<div class="contact-form">
				<form method="post">
					<div class="row">
						@Html.TextBoxFor(model => model.Student_Id, new { style = "display:none;" })
						<div class="col-md-6">
							<h2 class="mb-2">Öğrenci İsmi</h2>
							@Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", maxlength = 50 })
						</div>
						<div class="col-md-6">
							<h2 class="mb-2">Öğrenci Soyismi</h2>
							@Html.TextBoxFor(x => x.LastName, new { @class = "form-control", maxlength = 20 })
						</div>
						<div class="col-md-6">
							<h2 class="mb-2">Öğrenci T.C. Kimlik Numarası</h2>
							@Html.TextBoxFor(x => x.TC, new { @class = "form-control", maxlength = 11 })
						</div>
						<div class="col-md-6">
							<h2 class="mb-2">Öğrenci Doğum Tarihi</h2>
							@Html.TextBoxFor(model => model.BirthDay, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
						</div>
						<div class="col-md-6">
							<h2 class="mb-2">Öğrenci Telefon Numarası</h2>
							@Html.TextBoxFor(x => x.Phone, new { @class = "form-control", placeholder = "Başında 0 olmadan giriniz.", maxlength = 10 })
						</div>
						<div class="col-md-6">
							<h2 class="mb-2">Öğrenci E-Posta Adresi</h2>
							@Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
						</div>
						<div class="col-md-6">
							<h2 class="mb-2">Öğrenci Adres ID</h2>
							@Html.TextBoxFor(model => model.Class_Id, new { @class = "form-control" })
						</div>
						<div class="col-md-6">
							<h2 class="mb-2">Öğrenci Sınıf ID</h2>
							@Html.TextBoxFor(model => model.Adress_Id, new { @class = "form-control" })
						</div>
						<div class="col-md-6">
							<h2 class="mb-2">Öğrenci Veli ID</h2>
							@Html.TextBoxFor(model => model.Adress_Id, new { @class = "form-control" })
						</div>

						<div class="col-md-6">
							<h2 class="mb-2">Öğrenci Statüsü</h2>
							@Html.DropDownList("Status", new SelectList(new List<Object>
						{
						new { Value = "true", Text = "Aktif" },
						new { Value = "false", Text = "Pasif" }
						}, "Value", "Text"), "Lütfen öğrenci statüsünü seçiniz...", new { @class = "form-control" })
						</div>
						<div class="col-md-12 mt-5 text-center">
							<button type="submit" class="btn-primary">DEĞİŞKLİKLERİ KAYDET</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
}