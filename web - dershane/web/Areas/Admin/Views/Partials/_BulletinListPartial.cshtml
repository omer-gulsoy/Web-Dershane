<div class="event-area  pt--120 pb--80">
	<div class="container">
		<div class="row">
			<div class="col-md-8">
				<div class="section-title">
					<span class="text-uppercase">BÜLTEN İŞLEMLERİ</span>
					<h2>E-Posta Bültenine Katılanlar </h2>
				</div>
			</div>
		</div>
		<div class="row">
			@foreach (var item in ViewBag.Bulletin)
			{
				<div class="col-md-12">
					<div class="media align-items-center mb-5">
						<div class="media-head primary-bg">
							<p>E-Posta</p>
						</div>
						<div class="media-body">
							<h4><a class="fa fa-envelope" href="mailto:@item.Email"> @item.Email</a></h4>
						</div>
					</div>
				</div>
			}
		</div><!-- row -->
	</div><!-- container -->
</div><!-- event-area -->