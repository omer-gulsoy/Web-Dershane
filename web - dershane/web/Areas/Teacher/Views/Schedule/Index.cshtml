@using entity.Concrate
@model List<Schedule>
@{
	ViewData["Title"] = "Ders Programım";
	Layout = "~/Areas/Teacher/Views/Shared/_Layout.cshtml";
}

<div class="event-area  pt--120 pb--80">
	<div class="container">
		<div class="row">
			<div class="col-md-8">
				<div class="section-title">
					<span class="text-uppercase">DERS PROGRAMIM</span>
					<h2>Güncel Ders Programım </h2>
				</div>
			</div>
		</div>
		@foreach (var ogretmen in ViewBag.Ogretmen)
		{
			@foreach (var item in Model)
			{
				@if (item.Teacher_Id==ogretmen.Teacher_Id)
				{
					<div class="row mb-5">
						<h3 class="text-uppercase text-warning">@ogretmen.FirstName @ogretmen.LastName</h3>
						<div class="blog-carousel owl-carousel card-deck">
							@foreach (var a in Model)
							{
								<div class="card mb-5">
									<div class="card-body p-25">
										<div class="mb-5">
											<h4 class="card-title"><a href="#">@a.Class.Number @a.Class.Branch</a></h4>
										</div>
										<a class="card-text">@a.Time.ToString("dddd HH:mm")</a><br />
									</div>
								</div>

							}
						</div><!-- blog-carousel -->
					</div>

				}
			}
		}

		<!-- blog-carousel -->

	</div>
</div>