@using entity.Concrate
@model List<Schedule>
@{
	ViewData["Title"] = "Ders Programım";
	Layout = "~/Areas/Teacher/Views/Shared/_Layout.cshtml";
}

<div class="event-area  pt--120 pb--80">
	<div class="container">
		<div class="row">
			<div class="col-md-8">
				<div class="section-title">
					<span class="text-uppercase">DERS PROGRAMIM</span>
					<h2>Güncel Ders Programım </h2>
				</div>
			</div>
		</div>
		<div class="row mb-5">
			<h3 class="text-uppercase text-warning">@ViewBag.hoca.FirstName @ViewBag.hoca.LastName</h3>
			<div class="blog-carousel owl-carousel card-deck">
				@foreach (var item in Model)
				{
					<div class="card mb-5">
						<div class="card-body p-25">
							<div class="mb-5">
								<h4 class="card-title"><a href="#">@item.Class.Number @item.Class.Branch</a></h4>
							</div>
							<a class="card-text">@item.Time.ToString("dddd HH:mm")</a><br />
						</div>
					</div>

				}
			</div><!-- blog-carousel -->
		</div>

		<!-- blog-carousel -->

	</div>
</div>